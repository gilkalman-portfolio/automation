# EditorConfig helps maintain consistent coding styles across editors and IDEs
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Python files
[*.py]
indent_size = 4
max_line_length = 120
insert_final_newline = true

# Markdown files
[*.md]
trim_trailing_whitespace = false
charset = utf-8

# YAML / YML files
[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# XML files
[*.xml]
indent_size = 2

# Git configuration files
[*.gitignore]
indent_size = 2
